<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#ff66"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="left"
        >

        <RelativeLayout
            android:id="@+id/yiba_viewpager_tab1_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/yiba_viewpager_tab1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:textColor="@color/yiba_viewpager_tip_selected"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yiba_viewpager_tab2_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/yiba_viewpager_tab2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:textColor="@color/yiba_viewpager_tip_unselected"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yiba_viewpager_tab3_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/yiba_viewpager_tab3_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="15dp"
                android:textColor="@color/yiba_viewpager_tip_unselected"
                />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/yiba_viewpager_indicator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        >
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#22ffffff"/>

</RelativeLayout>
